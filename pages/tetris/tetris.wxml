<view class="game-container">
  <!-- 游戏主区域 -->
  <view class="game-area">
    <!-- 游戏主画布 -->
    <canvas type="2d" id="gameCanvas" class="game-canvas"></canvas>
    
    <!-- 侧边栏 -->
    <view class="sidebar">
      <!-- 预览区域 -->
      <view class="preview-area">
        <text class="preview-title">下一个</text>
        <canvas type="2d" id="previewCanvas" class="preview-canvas"></canvas>
      </view>
      
      <!-- 分数区域 -->
      <view class="score-area">
        <view class="score-item">
          <text>分数</text>
          <text class="score-value">{{score}}</text>
        </view>
        <view class="score-item">
          <text>等级</text>
          <text class="score-value">{{level}}</text>
        </view>
        <view class="score-item">
          <text>行数</text>
          <text class="score-value">{{lines}}</text>
        </view>
        <view class="score-item">
          <text>连击</text>
          <text class="score-value">{{combo}}</text>
        </view>
      </view>
    </view>
  </view>
  
  <!-- 控制区域 -->
  <view class="control-area">
    <view class="control-row">
      <view class="control-btn" bindtap="onRotate">↻</view>
      <view class="control-btn" bindtap="onPause">⏸</view>
    </view>
    <view class="control-row">
      <view class="control-btn" bindtap="onMoveLeft">←</view>
      <view class="control-btn" bindtap="onMoveDown">↓</view>
      <view class="control-btn" bindtap="onMoveRight">→</view>
    </view>
  </view>
</view>

<!-- 游戏结束遮罩 -->
<view class="game-over" wx:if="{{isGameOver}}">
  <text class="game-over-title">游戏结束</text>
  <text class="game-over-score">得分: {{score}}</text>
  <view class="game-over-btn" bindtap="onRestart">重新开始</view>
</view>

<!-- 暂停菜单 -->
<view class="pause-menu" wx:if="{{isPaused}}">
  <text class="menu-title">游戏暂停</text>
  <view class="menu-btn" bindtap="onResume">继续游戏</view>
  <view class="menu-btn" bindtap="onRestart">重新开始</view>
</view> 