/* 主容器 */
.container {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100vh;
  background: #f5f5f5;
  box-sizing: border-box;
  padding: 0;
  margin: 0;
}

/* 游戏主区域 */
.game-area {
  flex: 1;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #ffffff;
  overflow: hidden;
  box-shadow: inset 0 0 10rpx rgba(0,0,0,0.1);
}

.game-canvas {
  width: 100%;
  height: 100%;
  display: block;
}

/* 控制区域 */
.control-area {
  width: 100%;
  min-height: 140rpx;
  padding: 20rpx;
  background: #ffffff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 -4rpx 10rpx rgba(0,0,0,0.05);
}

/* 方向控制 */
.direction-pad {
  display: flex;
  gap: 20rpx;
}

.d-pad-row {
  display: flex;
  gap: 20rpx;
}

/* 功能按钮 */
.action-buttons {
  display: flex;
  gap: 20rpx;
}

/* 按钮样式 */
.d-pad-btn, .action-btn {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #f0f0f0;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
  transition: all 0.2s;
}

.d-pad-btn:active, .action-btn:active {
  transform: scale(0.95);
  background: #e8e8e8;
}

/* 功能按钮样式 */
.rotate-btn {
  background: #9b59b6 !important;
  color: white;
}

.down-btn {
  background: #3498db !important;
  color: white;
}

.drop-btn {
  background: #e74c3c !important;
  color: white;
}

.pause-btn {
  background: #95a5a6 !important;
  color: white;
}

/* 方向按钮样式 */
.d-pad-btn {
  background: #3498db !important;
  color: white;
}

.d-pad-btn .iconfont {
  font-size: 56rpx;
  font-weight: bold;
  color: white;
}

/* 图标样式 */
.iconfont {
  font-size: 48rpx;
  color: #666666;
}

.iconfont.bold {
  font-size: 56rpx;
  font-weight: bold;
}

.rotate-btn .iconfont,
.down-btn .iconfont,
.drop-btn .iconfont,
.pause-btn .iconfont {
  color: white;
}

/* 模态框样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255,255,255,0.9);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.modal-content {
  background: #ffffff;
  padding: 40rpx;
  border-radius: 20rpx;
  width: 80%;
  max-width: 600rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 30rpx;
  color: #333333;
}

.modal-btn {
  margin: 20rpx 0;
  padding: 20rpx;
  border-radius: 10rpx;
  text-align: center;
  background: #f5f5f5;
  color: #333333;
  transition: all 0.2s;
}

.modal-btn:active {
  background: #e8e8e8;
}

.modal-btn.primary {
  background: #4a90e2;
  color: #ffffff;
}

.modal-btn.primary:active {
  background: #357abd;
}

/* 旋转按钮的双箭头样式 */
.rotate-arrows {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  line-height: 1;
}

.arrow-top {
  font-size: 36rpx;
  margin-bottom: -10rpx;
}

.arrow-bottom {
  font-size: 36rpx;
  margin-top: -10rpx;
} 