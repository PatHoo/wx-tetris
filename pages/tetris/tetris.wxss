/* 游戏容器 */
.game-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 100vh;
  background-color: var(--background-color, #F8F9FA);
}

/* 游戏主区域 */
.game-area {
  display: flex;
  justify-content: space-between;
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}

/* 游戏主画布 */
.game-canvas {
  width: 400rpx;
  height: 800rpx;
  background-color: rgba(0, 0, 0, 0.05);
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

/* 侧边栏 */
.sidebar {
  display: flex;
  flex-direction: column;
  width: 240rpx;
  margin-left: 20rpx;
}

/* 预览区域 */
.preview-area {
  background-color: rgba(0, 0, 0, 0.05);
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.preview-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.preview-canvas {
  width: 200rpx;
  height: 300rpx;
}

/* Hold区域 */
.hold-area {
  background-color: rgba(0, 0, 0, 0.05);
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.hold-canvas {
  width: 200rpx;
  height: 100rpx;
}

/* 分数区域 */
.score-area {
  background-color: rgba(0, 0, 0, 0.05);
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.score-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
  font-size: 28rpx;
  color: #666;
}

.score-value {
  font-weight: bold;
  color: #333;
}

/* 控制区域 */
.control-area {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  margin-top: auto;
}

.control-row {
  display: flex;
  justify-content: space-around;
  margin-bottom: 20rpx;
}

.control-btn {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: rgba(0, 0, 0, 0.1);
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 48rpx;
  color: #666;
  transition: all 0.2s ease;
}

.control-btn:active {
  background-color: rgba(0, 0, 0, 0.2);
  transform: scale(0.95);
}

/* 游戏结束遮罩 */
.game-over {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.8);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 100;
}

.game-over-title {
  font-size: 60rpx;
  color: #fff;
  margin-bottom: 40rpx;
}

.game-over-score {
  font-size: 48rpx;
  color: #fff;
  margin-bottom: 60rpx;
}

.game-over-btn {
  width: 300rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  color: #333;
  margin-bottom: 20rpx;
  transition: all 0.2s ease;
}

.game-over-btn:active {
  transform: scale(0.95);
  opacity: 0.9;
}

/* 暂停菜单 */
.pause-menu {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.8);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 100;
}

.menu-title {
  font-size: 48rpx;
  color: #fff;
  margin-bottom: 60rpx;
}

.menu-btn {
  width: 300rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  color: #333;
  margin-bottom: 20rpx;
  transition: all 0.2s ease;
}

.menu-btn:active {
  transform: scale(0.95);
  opacity: 0.9;
}

/* 设置面板 */
.settings-panel {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 600rpx;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  z-index: 200;
}

.settings-title {
  font-size: 36rpx;
  color: #333;
  text-align: center;
  margin-bottom: 40rpx;
}

.settings-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  font-size: 28rpx;
  color: #666;
}

.settings-btn {
  width: 200rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background-color: #2ED573;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  margin: 40rpx auto 0;
  transition: all 0.2s ease;
}

.settings-btn:active {
  transform: scale(0.95);
  opacity: 0.9;
}

/* 动画效果 */
@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes slideIn {
  from { transform: translateY(-100%); }
  to { transform: translateY(0); }
}

.fade-in {
  animation: fadeIn 0.3s ease-in-out;
}

.slide-in {
  animation: slideIn 0.3s ease-out;
}

/* 成就提示 */
.achievement-popup {
  position: fixed;
  top: 100rpx;
  left: 50%;
  transform: translateX(-50%);
  background-color: rgba(0, 0, 0, 0.8);
  border-radius: 16rpx;
  padding: 20rpx 40rpx;
  display: flex;
  align-items: center;
  z-index: 300;
}

.achievement-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
}

.achievement-content {
  color: #fff;
}

.achievement-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.achievement-desc {
  font-size: 24rpx;
  opacity: 0.8;
}

.achievement-points {
  font-size: 28rpx;
  color: #FFD700;
  margin-left: 20rpx;
}

/* 新纪录提示 */
.new-record-popup {
  position: fixed;
  top: 100rpx;
  left: 50%;
  transform: translateX(-50%);
  background-color: #FFD700;
  border-radius: 16rpx;
  padding: 20rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 300;
}

.new-record-title {
  font-size: 32rpx;
  color: #fff;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.new-record-rank {
  font-size: 28rpx;
  color: #fff;
  opacity: 0.9;
}

/* 响应式布局 */
@media screen and (min-width: 768px) {
  .game-container {
    max-width: 1200rpx;
    margin: 0 auto;
  }
  
  .game-canvas {
    width: 600rpx;
    height: 1200rpx;
  }
  
  .sidebar {
    width: 300rpx;
  }
} 