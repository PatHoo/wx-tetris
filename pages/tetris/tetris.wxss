  align-items: center;
  transform: scale(0.8);
  transition: transform 0.3s ease;
}

.level-up-effect.show .level-up-content {
  transform: scale(1);
}

.level-up-title {
  font-size: 60rpx;
  font-weight: bold;
  color: #FFC048;
  text-shadow: 0 2px 4px rgba(0,0,0,0.3);
  margin-bottom: 20rpx;
}

.new-level {
  font-size: 80rpx;
  font-weight: bold;
  color: #2ED573;
  text-shadow: 0 2px 4px rgba(0,0,0,0.3);
  margin-bottom: 20rpx;
}

.speed-up {
  font-size: 40rpx;
  color: #FF6B81;
  text-shadow: 0 2px 4px rgba(0,0,0,0.3);
  animation: pulse 1s infinite;
}

@keyframes pulse {
  0% { transform: scale(1); }
  50% { transform: scale(1.1); }
  100% { transform: scale(1); }
}

.combo-effect {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%) scale(0);
  opacity: 0;
  transition: all 0.3s ease;
}

.combo-effect.show {
  transform: translate(-50%, -50%) scale(1);
  opacity: 1;
}

.combo-text {
  font-size: 60rpx;
  font-weight: bold;
  color: #FF6B81;
  text-shadow: 0 2px 4px rgba(0,0,0,0.3);
  animation: comboScale 0.3s infinite alternate;
}

@keyframes comboScale {
  from { transform: scale(1); }
  to { transform: scale(1.2); }
}

.tutorial {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.8);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 3000;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.tutorial.show {
  opacity: 1;
}

.tutorial-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: white;
}

.gesture-animation {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 40rpx;
  background: white;
  border-radius: 50%;
}

.gesture-animation.swipe-horizontal {
  animation: swipeHorizontal 2s infinite;
}

.gesture-animation.tap {
  animation: tap 1s infinite;
}

.gesture-animation.swipe-down {
  animation: swipeDown 2s infinite;
}

@keyframes swipeHorizontal {
  0%, 100% { transform: translateX(0); }
  50% { transform: translateX(100rpx); }
}

@keyframes tap {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(0.8); }
}

@keyframes swipeDown {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(100rpx); }
}

