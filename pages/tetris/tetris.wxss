  padding: 10rpx;
}

.preview-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.preview-canvas {
  width: 80px !important;
  height: 80px !important;
  display: block;
}

.control-area {
  height: 180rpx;
  padding: 20rpx;
}

.control-row {
  display: flex;
  justify-content: center;
  margin-bottom: 20rpx;
}

.control-btn {
  width: 120rpx;
  height: 120rpx;
  margin: 0 20rpx;
  padding: 0;
  line-height: 120rpx;
  border-radius: 50%;
  background: rgba(255,255,255,0.9);
  border: 1rpx solid #DEE2E6;
  font-size: 28rpx;
  color: #333;
}

.control-btn:active {
