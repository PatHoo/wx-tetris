.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #F8F9FA;
  padding: 0;
  justify-content: flex-start;
}

.status-bar {
  height: 100rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 0 30rpx;
}

.score, .level {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.label {
  font-size: 28rpx;
  color: #666;
}

.value {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.game-area {
  position: relative;
  display: flex;
  justify-content: center;
  padding: 20rpx;
  background: #f0f0f0;
}

.main-canvas {
  width: 200px !important;
  height: 400px !important;
  background: #fff;
  border: 2rpx solid #DEE2E6;
  border-radius: 12rpx;
  display: block;
}

.preview-area {
  position: absolute;
  right: 40rpx;
  top: 40rpx;
